        <activity
            android:name=".BuscarTareaEmpleadoActivity"
            android:label="@string/title_activity_buscar_tarea_empleado" >
        </activity>
        <activity
            android:name=".DetalleActivity"
            android:label="@string/title_activity_detalle" >
