<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/f3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gestortareasapp.MenuEficienciaEmpleado" >

    <TextView
        android:id="@+id/textViewNombreList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Eficiencia De Tareas"
        android:textColor="#6aba02"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonTareaRealizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewNombreList"
        android:layout_marginBottom="46dp"
        android:layout_marginRight="26dp"
        android:onClick="onCerrar"
        android:text="CERRAR" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ButtonTareaRealizada"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:onClick="onTareas"
        android:text="POR TAREAS" />

    <Button
        android:id="@+id/buttonTareaPendiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:onClick="onGeneral"
        android:text="GENERAL" />

</RelativeLayout>

