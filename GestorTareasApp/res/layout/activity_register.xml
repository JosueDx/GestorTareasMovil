<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gestortareasapp.RegisterActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewNombreList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="            Registar Usuario"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/Rnombre"
                android:layout_width="246dp"
                android:layout_height="70px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nombre" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/Rapellido"
                android:layout_width="242dp"
                android:layout_height="70px"
                android:layout_weight="0.08"
                android:ems="10"
                android:hint="Apellido" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/Rcedula"
                android:layout_width="236dp"
                android:layout_height="70px"
                android:ems="10"
                android:hint="Cedula"
                android:maxLength="10" />

            <ImageView
                android:id="@+id/imageViewVisto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_visto" />

            <ImageView
                android:id="@+id/imageViewE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_erroneo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/Rdireccion"
                android:layout_width="246dp"
                android:layout_height="70px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Direccion" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/Remail"
                android:layout_width="244dp"
                android:layout_height="70px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="email" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/Rusuario"
                android:layout_width="233dp"
                android:layout_height="70px"
                android:ems="10"
                android:hint="Usuario" />

            <ImageView
                android:id="@+id/ImageViewV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_visto" />

            <ImageView
                android:id="@+id/ImageViewE2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_erroneo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/Rcontrasenia"
                android:layout_width="238dp"
                android:layout_height="70px"
                android:layout_weight="1"
                android:ems="10"
                android:hint="contraseña"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/RConfirmarContrasenia"
                android:layout_width="236dp"
                android:layout_height="70px"
                android:ems="10"
                android:hint="Repita contraseña"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/ImageViewV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_visto" />

            <ImageView
                android:id="@+id/ImageViewE3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_erroneo" />

        </LinearLayout>

        <Spinner
            android:id="@+id/RspinnerDepartamentos"
            style="Departamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Departamentos"
            android:prompt="@string/Hola_tu"
            android:text="[hola]" />

        <TextView
            android:id="@+id/textViewDescripcionEficiencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                             Departamento" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/ButtonTareaRealizada"
                android:layout_width="440px"
                android:layout_height="80px"
                android:onClick="OnRegistar"
                android:text="Registrar Usuario"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonRealizarTareas"
                android:layout_width="440px"
                android:layout_height="80px"
                android:onClick="OnCancelar"
                android:text="CANCELAR"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>